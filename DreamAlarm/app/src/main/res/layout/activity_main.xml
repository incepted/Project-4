<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:id="@+id/main_background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary" />

    <ImageView
        android:id="@+id/main_char_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:src="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center">

        <TextView
            android:id="@+id/main_char_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#a31b5e20"
            android:paddingLeft="16dp"
            android:text="KOTORI"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/main_char_script_text_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/main_char_name_text_view"
            android:layout_marginBottom="20dp"
            android:background="#a8000000"
            android:padding="16dp"
            android:text="I'll wake you up at 8:30!"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_clock_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="10:30"
                android:textSize="70sp" />

            <TextView
                android:id="@+id/main_clock_ampm_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:text="PM"
                android:textSize="40sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_clock_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Apr 3, 2016"
            android:layout_marginTop="-10dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|center_vertical">

        <ImageView
            android:id="@+id/main_alarm_list_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alarm_36dp"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/main_char_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_supervisor_account"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/main_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:layout_margin="10dp"/>

    </LinearLayout>

</FrameLayout>
